<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- Header aligned to top -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#91F8F9"
        android:orientation="horizontal"
        android:gravity="center" >



    </LinearLayout>

    <!-- Footer aligned to bottom -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#91F8F9"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:id="@+id/BtnReportarError"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:text="Reportar Error"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#fff"
            android:background="@drawable/seleccion"
            android:gravity="center"
            />





    </LinearLayout>

    <LinearLayout
        android:id="@+id/Otros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#91F8F9"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_above="@id/footer"
        android:layout_below="@id/header"
        android:gravity="center" >

        <TextView android:id="@+id/TxtTipoError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Error"
            android:background="#D5F8F8"
            android:textSize="20sp"
            android:shadowDx="3"
            android:shadowDy="2"
            android:gravity="top"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_margin="10sp"
            android:typeface="monospace"/>

        <EditText
            android:layout_width="300sp"
            android:layout_height="30sp"
            android:id="@+id/EtxTipoError"
            android:layout_below="@+id/TxtTipoError"
            android:background="#D5F8F8"
            android:textSize="20sp"
            android:shadowDx="3"
            android:shadowDy="2"
            android:gravity="top"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_margin="10sp"
            android:typeface="monospace"
            />



        <TextView android:id="@+id/TxtDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n"
            android:background="#D5F8F8"
            android:textSize="20sp"
            android:shadowDx="3"
            android:shadowDy="2"
            android:gravity="top"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_margin="10sp"
            android:typeface="monospace"/>


        <EditText
            android:layout_width="300sp"
            android:layout_height="100sp"
            android:id="@+id/EtxDescripcion"
            android:layout_below="@+id/TxtDescripcion"
            android:background="#D5F8F8"
            android:textSize="20sp"
            android:shadowDx="3"
            android:shadowDy="2"
            android:gravity="top"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_margin="10sp"
            android:typeface="monospace"
            />







    </LinearLayout>





    <!-- Inflate the contents of the ScrollView dynamicaly -->


</RelativeLayout>


